* {
	padding:0;
	margin:0;
}
.todo
	&-wrap
		text-align: center;
		padding-top: 100px;
	&-list
		padding: 15px 0;
		width: 400px;
		text-align: left;
		margin: auto;
		&__item
			font: 25px Arial, Helvetica, sans-serif;
			color: #444444;
			padding: 10px 0;
			list-style-type: none;
		&__state
			display: inline-block;
			border-radius: 30px;
			border:3px solid #ffffff;
			box-shadow: 0 0 3px #555;
			cursor:pointer;
			width: 25px;
			height: 25px;
			vertical-align: middle;
			margin-right: 10px;
			&.completed
				background-color: #5ef9af;
				& + span
					text-decoration line-through;
	&__title
		font: 30px Arial, Helvetica, sans-serif;
		color: #666;
		padding-bottom: 15px;
	&__field
		font: italic 30px Arial, Helvetica, sans-serif;
		color: #444;
		border-radius: 5px;
		box-shadow 0 1px 3px #ccc;
		padding: 5px;
		width: 400px;
		border: 1px solid #ccc;